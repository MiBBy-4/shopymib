<div class="mt-4">
  <label for="<%= setting.name %>" class="block mb-2 text-md font-medium text-gray-900"><%= setting.name %></label>
  <select name="advertisement_additional[<%= setting.name %>]" id="<%= setting.name %>" class="form-inp font-bold py-3 px-4 pr-9 block w-max border-gray-200 rounded-full text-sm focus:border-blue-500 focus:ring-blue-500">
    <option selected><%= setting.name %></option>
    <% values.each do |value| %>
      <option value="<%= value.value %>"><%= value.value %></option>
    <% end %>
  </select>
</div>
